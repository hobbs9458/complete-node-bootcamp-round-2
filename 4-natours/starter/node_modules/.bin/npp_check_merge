#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/bash" ]; then
  exec "$basedir/bash"  "$basedir/../npp/cli/npp_check_merge.sh" "$@"
else 
  exec bash  "$basedir/../npp/cli/npp_check_merge.sh" "$@"
fi
